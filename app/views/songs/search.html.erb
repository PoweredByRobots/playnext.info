<div class='container'>
  <div class='row'>
      <%= form_tag(songs_search_path, { class: 'form-inline mx-auto' }) do %>
        <%= form_for @song do |f| %>
          <%= f.autocomplete_field :title, autocomplete_title_songs_path %>
        <% end %> 
        <%= # text_field_tag :current_song, nil, class: "search form-control text-center", placeholder: @current_song || 'now playing' %>
        <%= button_tag type: 'submit', class: "button" do %>
          <i class="fa fa-exchange"></i>
        <% end %>
      <% end %>
  </div>
  <hr>
  <div class='row'>
    <%= smart_listing_controls_for(:songs, { class: 'form-inline mx-auto' }) do %>
      <!-- Levels -->
      <div class='col-sm mb-3'>
        <div class="checkbox">
          <label class="checkbox inline">
            <%= hidden_field_tag :level_1, 0 %>
            <%= check_box_tag :level_1, "1", @level_1 == '1' %>
            <%= "1" %>
          </label>
        </div>
        <div class="checkbox">
          <label class="checkbox inline">
            <%= hidden_field_tag :level_2, 0 %>
            <%= check_box_tag :level_2, "1", @level_2 == '1' %>
            <%= "2" %>
          </label>
        </div>
        <div class="checkbox">
          <label class="checkbox inline">
            <%= hidden_field_tag :level_3, 0 %>
            <%= check_box_tag :level_3, "1", @level_3 == '1' %>
            <%= "3" %>
          </label>
        </div>
        <div class="checkbox">
          <label class="checkbox inline">
            <%= hidden_field_tag :level_4, 0 %>
            <%= check_box_tag :level_4, "1", @level_4 == '1' %>
            <%= "4" %>
          </label>
        </div>
        <div class="checkbox">
          <label class="checkbox inline">
            <%= hidden_field_tag :level_5, 0 %>
            <%= check_box_tag :level_5, "1", @level_5 == '1' %>
            <%= "5" %> 
          </label>
        </div>
      </div>

      <!-- Search -->
      <div class="form-group filter input-append col-sm-3 col-md-5 col-lg-7 input-group mb-3">
        <%= text_field_tag :search_filter, '', class: "search form-control text-center", 
          placeholder: "artist | title | year | genre | album", size: 50,
          autocomplete: "off" %>
      </div>
      
      <!-- Show All Checkbox -->
      <div class='col-sm mb-3'>
        <div class="checkbox">
        <label class="checkbox inline">
          <%= hidden_field_tag :show_all, "0" %>
          <%= check_box_tag :show_all %>
          <%= "show all" %>
        </label>
        </div>
      </div>
    <% end %>
  </div>
  <div class='row'>
    <div class='mx-auto text-center justify-content-center'>
      <div class='col'>
        <!-- Compatible Songs -->
        <h3>suggestions</h3>
        <%= smart_listing_render :songs %>
      </div>
    </div>
  </div>
</div>
